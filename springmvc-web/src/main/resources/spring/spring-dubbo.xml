<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="springmvc-dubbo-consumer"/>

    <!-- 使用zookeeper注册中心获取服务地址 -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" />

    <dubbo:protocol name="dubbo" port="20880"/>

    <dubbo:reference id="firstDubboService" check="${dubbo.check}" interface="com.doodl6.springmvc.client.api.FirstDubboService" version="${dubbo.first.version}"/>

</beans>